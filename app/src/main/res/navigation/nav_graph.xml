<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/noteListeningFragment"
        android:name="com.example.noteapp.view.note.NoteListingragment"
        android:label="fragment_note_listening"
        tools:layout="@layout/fragment_note_listening" >
        <action
            android:id="@+id/action_noteListeningFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.example.noteapp.view.note.NoteDetailFragment"
        android:label="fragment_note_detail"
        tools:layout="@layout/fragment_note_detail" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.noteapp.view.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_noteListeningFragment"
            app:destination="@id/noteListeningFragment" />
    </fragment>
</navigation>